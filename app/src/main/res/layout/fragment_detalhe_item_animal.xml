<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="@dimen/size_16dp"
    tools:context=".ui.detalhe.view.DetalheItemAnimalFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/ivItemAnimais"
            android:layout_width="match_parent"
            android:layout_height="@dimen/size_200_dp"
            android:scaleType="centerInside"
            android:src="@drawable/hylobates_syndactylus"
            android:contentDescription="@string/imagem_de_animal"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tvItemTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/size_20dp"
            android:text="@string/titulo_tipo_de_animais"
            android:textColor="@color/vermelho"
            android:textSize="@dimen/sizeText_20sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/ivItemAnimais" />

        <ImageView
            android:id="@+id/ivFavorito"
            android:layout_width="@dimen/size_40dp"
            android:layout_height="@dimen/size_40dp"
            android:layout_marginTop="@dimen/size_50dp"
            android:layout_marginEnd="@dimen/size_20dp"
            android:contentDescription="@string/icone_de_coracao_sem_cor"
            android:foregroundGravity="right"
            android:src="@drawable/icon_notfavorite"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/ivItemAnimais" />

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/size_20dp"
            android:text="@string/textview_tipo_de_animal"
            android:textColor="@color/black"
            android:textSize="@dimen/sizeText_20sp"
            app:layout_constraintEnd_toEndOf="@+id/tvItemTitle"
            app:layout_constraintStart_toStartOf="@+id/tvItemTitle"
            app:layout_constraintTop_toBottomOf="@+id/tvItemTitle" />

        <TextView
            android:id="@+id/tvItemTipoDeAnimal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/size_10dp"
            android:text="@string/tipo_de_animal"
            android:textColor="@color/vermelho"
            android:textSize="@dimen/sizeText_20sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="@+id/textView"
            app:layout_constraintStart_toStartOf="@+id/textView"
            app:layout_constraintTop_toBottomOf="@+id/textView" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/size_10dp"
            android:text="@string/tempo_de_ativo"
            android:textColor="@color/black"
            android:textSize="@dimen/sizeText_20sp"
            app:layout_constraintEnd_toEndOf="@+id/tvItemTipoDeAnimal"
            app:layout_constraintStart_toStartOf="@+id/tvItemTipoDeAnimal"
            app:layout_constraintTop_toBottomOf="@+id/tvItemTipoDeAnimal" />

        <TextView
            android:id="@+id/tvItemTempoAtivo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/size_10dp"
            android:text="@string/tempo_ativo"
            android:textColor="@color/vermelho"
            android:textSize="@dimen/sizeText_20sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="@+id/textView2"
            app:layout_constraintStart_toStartOf="@+id/textView2"
            app:layout_constraintTop_toBottomOf="@+id/textView2" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/size_10dp"
            android:text="@string/textview_comprimento_minimo"
            android:textColor="@color/black"
            android:textSize="@dimen/sizeText_20sp"
            app:layout_constraintEnd_toEndOf="@+id/tvItemTempoAtivo"
            app:layout_constraintStart_toStartOf="@+id/tvItemTempoAtivo"
            app:layout_constraintTop_toBottomOf="@+id/tvItemTempoAtivo" />

        <TextView
            android:id="@+id/tvComprimentoMin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/size_10dp"
            android:text="@string/comprimento_minimo"
            android:textColor="@color/vermelho"
            android:textSize="@dimen/sizeText_20sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="@+id/textView3"
            app:layout_constraintStart_toStartOf="@+id/textView3"
            app:layout_constraintTop_toBottomOf="@+id/textView3" />

        <TextView
            android:id="@+id/textView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/size_10dp"
            android:text="@string/textview_comprimento_maximo"
            android:textColor="@color/black"
            android:textSize="@dimen/sizeText_20sp"
            app:layout_constraintEnd_toEndOf="@+id/tvComprimentoMin"
            app:layout_constraintStart_toStartOf="@+id/tvComprimentoMin"
            app:layout_constraintTop_toBottomOf="@+id/tvComprimentoMin" />

        <TextView
            android:id="@+id/tvComprimentoMax"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/size_10dp"
            android:text="@string/comprimento_maximo"
            android:textColor="@color/vermelho"
            android:textSize="@dimen/sizeText_20sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="@+id/textView4"
            app:layout_constraintStart_toStartOf="@+id/textView4"
            app:layout_constraintTop_toBottomOf="@+id/textView4" />

        <TextView
            android:id="@+id/textView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/size_10dp"
            android:text="@string/textView_peso_minimo"
            android:textColor="@color/black"
            android:textSize="@dimen/sizeText_20sp"
            app:layout_constraintEnd_toEndOf="@+id/tvComprimentoMax"
            app:layout_constraintStart_toStartOf="@+id/tvComprimentoMax"
            app:layout_constraintTop_toBottomOf="@+id/tvComprimentoMax" />

        <TextView
            android:id="@+id/tvPesoMin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/size_10dp"
            android:text="@string/peso_minimo"
            android:textColor="@color/vermelho"
            android:textSize="@dimen/sizeText_20sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="@+id/textView5"
            app:layout_constraintStart_toStartOf="@+id/textView5"
            app:layout_constraintTop_toBottomOf="@+id/textView5" />

        <TextView
            android:id="@+id/textView6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/size_10dp"
            android:text="@string/textView_peso_maximo"
            android:textColor="@color/black"
            android:textSize="@dimen/sizeText_20sp"
            app:layout_constraintEnd_toEndOf="@+id/tvPesoMin"
            app:layout_constraintStart_toStartOf="@+id/tvPesoMin"
            app:layout_constraintTop_toBottomOf="@+id/tvPesoMin" />

        <TextView
            android:id="@+id/tvPesoMax"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/size_10dp"
            android:text="@string/peso_maximo"
            android:textColor="@color/vermelho"
            android:textSize="@dimen/sizeText_20sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="@+id/textView6"
            app:layout_constraintStart_toStartOf="@+id/textView6"
            app:layout_constraintTop_toBottomOf="@+id/textView6" />

        <TextView
            android:id="@+id/textView7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/size_10dp"
            android:text="@string/textView_vida_util"
            android:textColor="@color/black"
            android:textSize="@dimen/sizeText_20sp"
            app:layout_constraintEnd_toEndOf="@+id/tvPesoMax"
            app:layout_constraintStart_toStartOf="@+id/tvPesoMax"
            app:layout_constraintTop_toBottomOf="@+id/tvPesoMax" />

        <TextView
            android:id="@+id/tvVidaUtil"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/size_10dp"
            android:text="@string/vida_util"
            android:textColor="@color/vermelho"
            android:textSize="@dimen/sizeText_20sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="@+id/textView7"
            app:layout_constraintStart_toStartOf="@+id/textView7"
            app:layout_constraintTop_toBottomOf="@+id/textView7" />

        <TextView
            android:id="@+id/textView8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/size_10dp"
            android:text="@string/textView_habitat"
            android:textColor="@color/black"
            android:textSize="@dimen/sizeText_20sp"
            app:layout_constraintEnd_toEndOf="@+id/tvVidaUtil"
            app:layout_constraintStart_toStartOf="@+id/tvVidaUtil"
            app:layout_constraintTop_toBottomOf="@+id/tvVidaUtil" />

        <TextView
            android:id="@+id/tvHabitat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/size_10dp"
            android:text="@string/habitat"
            android:textColor="@color/vermelho"
            android:textSize="@dimen/sizeText_20sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="@+id/textView8"
            app:layout_constraintStart_toStartOf="@+id/textView8"
            app:layout_constraintTop_toBottomOf="@+id/textView8" />

        <TextView
            android:id="@+id/textView9"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/size_10dp"
            android:text="@string/textView_dieta"
            android:textColor="@color/black"
            android:textSize="@dimen/sizeText_20sp"
            app:layout_constraintEnd_toEndOf="@+id/tvHabitat"
            app:layout_constraintStart_toStartOf="@+id/tvHabitat"
            app:layout_constraintTop_toBottomOf="@+id/tvHabitat" />

        <TextView
            android:id="@+id/tvDieta"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/size_10dp"
            android:text="@string/dieta"
            android:textColor="@color/vermelho"
            android:textSize="@dimen/sizeText_20sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="@+id/textView9"
            app:layout_constraintStart_toStartOf="@+id/textView9"
            app:layout_constraintTop_toBottomOf="@+id/textView9" />

        <TextView
            android:id="@+id/textView10"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/size_10dp"
            android:text="@string/textView_faixa_geografia"
            android:textColor="@color/black"
            android:textSize="@dimen/sizeText_20sp"
            app:layout_constraintEnd_toEndOf="@+id/tvDieta"
            app:layout_constraintStart_toStartOf="@+id/tvDieta"
            app:layout_constraintTop_toBottomOf="@+id/tvDieta" />

        <TextView
            android:id="@+id/tvFaixaGeografia"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/size_10dp"
            android:text="@string/faixa_geografia"
            android:textColor="@color/vermelho"
            android:textSize="@dimen/sizeText_20sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="@+id/textView10"
            app:layout_constraintStart_toStartOf="@+id/textView10"
            app:layout_constraintTop_toBottomOf="@+id/textView10" />


    </androidx.constraintlayout.widget.ConstraintLayout>



</ScrollView>